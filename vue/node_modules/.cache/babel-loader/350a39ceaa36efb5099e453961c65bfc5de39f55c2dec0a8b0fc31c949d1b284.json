{"ast":null,"code":"import E from 'wangeditor';\nexport default {\n  data() {\n    let courseId = this.$route.query.id;\n    return {\n      user: JSON.parse(localStorage.getItem('xm-user') || '{}'),\n      courseId: courseId,\n      courseData: {},\n      flag: false,\n      content: null,\n      commentData: []\n    };\n  },\n  mounted() {\n    this.loadCourse();\n    this.checkCourse();\n    this.loadComment();\n  },\n  // methods：本页面所有的点击事件或者其他函数定义区\n  methods: {\n    checkCourse() {\n      this.$request.get('/orders/selectAll', {\n        params: {\n          userId: this.user.id,\n          courseId: this.courseId\n        }\n      }).then(res => {\n        if (res.code === '200') {\n          if (res.data.length > 0) {\n            this.flag = true;\n          }\n        } else {\n          this.$message.error(res.msg);\n        }\n      });\n    },\n    loadCourse() {\n      this.$request.get('/course/selectById/' + this.courseId).then(res => {\n        if (res.code === '200') {\n          this.courseData = res.data;\n        } else {\n          this.$message.error(res.msg);\n        }\n      });\n    },\n    buy() {\n      let data = {\n        courseId: this.courseId,\n        userId: this.user.id\n      };\n      this.$request.post('/orders/add', data).then(res => {\n        if (res.code === '200') {\n          this.$message.success('购买成功，已解锁课程');\n          this.loadCourse();\n          this.checkCourse();\n        } else {\n          this.$message.error(res.msg);\n        }\n      });\n    },\n    submit(content, parentId) {\n      let data = {\n        userId: this.user.id,\n        courseId: this.courseId,\n        content: content,\n        parentId: parentId\n      };\n      this.$request.post('/comment/add', data).then(res => {\n        if (res.code === '200') {\n          this.$message.success('评论成功');\n          this.content = null;\n          this.loadComment();\n        } else {\n          this.$message.error(res.msg);\n        }\n      });\n    },\n    loadComment() {\n      this.$request.get('/comment/selectAll', {\n        params: {\n          courseId: this.courseId\n        }\n      }).then(res => {\n        if (res.code === '200') {\n          this.commentData = res.data;\n        } else {\n          this.$message.error(res.msg);\n        }\n      });\n    }\n  }\n};","map":{"version":3,"names":["E","data","courseId","$route","query","id","user","JSON","parse","localStorage","getItem","courseData","flag","content","commentData","mounted","loadCourse","checkCourse","loadComment","methods","$request","get","params","userId","then","res","code","length","$message","error","msg","buy","post","success","submit","parentId"],"sources":["src/views/front/CourseDetail.vue"],"sourcesContent":["<template>\n  <div class=\"main-content\">\n    <div style=\"width: 70%; margin: 30px auto; min-height: 1000px\">\n      <div style=\"text-align: center\">\n        <el-button type=\"success\">{{ courseData.type === 'VIDEO'? '视频课' : '图文课' }}</el-button>\n        <span style=\"font-size: 20px; font-weight: 550; color: #333333; margin-left: 20px\">{{ courseData.name }}</span>\n      </div>\n      <div style=\"text-align: center; margin-top: 15px\">\n        <span style=\"color: red\" v-if=\"courseData.price > 0\">￥ {{ courseData.price }} / 元</span>\n        <span style=\"color: red\" v-else>公开课</span>\n        <span style=\"color: #509a4d; margin-left: 20px\" v-if=\"courseData.discount < 1\">{{ courseData.discount * 10 }} 折</span>\n        <span style=\"color: #666666; margin-left: 50px\">发布时间：{{ courseData.time }}</span>\n      </div>\n      <!--   课程保密区域   -->\n      <div>\n        <div style=\"font-size: 18px; margin: 10px 0\">课程资料</div>\n        <div v-if=\"courseData.price === 0 || flag\">\n          <video :src=\"courseData.video\" v-if=\"courseData.type === 'VIDEO'\" controls style=\"width: 65%; height: 400px\"></video>\n          <div style=\"margin-top: 10px\">资料链接：<a :href=\"courseData.file\" target=\"_blank\">{{ courseData.file }}</a></div>\n        </div>\n        <div v-else>\n          <span style=\"color: red; margin-right: 20px\">该课程属于付费课程，购买后可解锁</span>\n          <el-button type=\"warning\" size=\"mini\" @click=\"buy\">购买课程</el-button>\n        </div>\n      </div>\n      <!--   课程介绍区域   -->\n      <div style=\"margin-top: 20px\">\n        <div style=\"font-size: 18px\">课程介绍</div>\n        <div style=\"margin-top: 10px\" v-html=\"courseData.content\" class=\"w-e-text w-e-text-container\"></div>\n      </div>\n\n      <div style=\"margin-top: 50px; font-size: 18px\">欢迎发表您宝贵的意见</div>\n      <div style=\"margin-top: 20px\">\n        <el-input type=\"textarea\" :rows=\"5\" v-model=\"content\"></el-input>\n      </div>\n      <div style=\"margin-top: 10px; text-align: right\">\n        <el-button type=\"primary\" @click=\"submit(content, 0)\">提交</el-button>\n      </div>\n      <div style=\"margin-top: 30px; margin-bottom: 500px\">\n        <el-row v-for=\"item in commentData\" style=\"margin-bottom: 30px\">\n          <el-col :span=\"4\">\n            <div style=\"display: flex; align-items: center;\">\n              <img :src=\"item.userAvatar\" alt=\"\" style=\"width: 50px; height: 50px; border-radius: 50%\">\n              <div style=\"flex: 1; margin-left: 10px\">{{item.userName}}</div>\n            </div>\n          </el-col>\n          <el-col :span=\"20\">\n            <div style=\"height: 50px; line-height: 50px\">\n              <el-row>\n                <el-col :span=\"18\" style=\"white-space: nowrap; overflow: hidden; text-overflow: ellipsis;\">{{item.content}}</el-col>\n                <el-col :span=\"6\" style=\"text-align: right\">{{item.time}}</el-col>\n              </el-row>\n            </div>\n            <div v-for=\"child in item.children\" style=\"margin-bottom: 5px\">\n              <el-row>\n                <el-col :span=\"5\">\n                  <div style=\"display: flex; align-items: center;\">\n                    <img :src=\"child.userAvatar\" alt=\"\" style=\"width: 50px; height: 50px; border-radius: 50%\">\n                    <div style=\"flex: 1; margin-left: 10px\">{{ child.userName }} 回复：</div>\n                  </div>\n                </el-col>\n                <el-col :span=\"13\" style=\"height: 50px; line-height: 50px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;\">{{child.content}}</el-col>\n                <el-col :span=\"6\" style=\"height: 50px; line-height: 50px; text-align: right\">{{child.time}}</el-col>\n              </el-row>\n            </div>\n            <div style=\"margin-top: 20px\">\n              <el-input style=\"width: 400px\" v-model=\"item.tmp\"></el-input>\n              <el-button type=\"primary\" style=\"margin-left: 5px\" @click=\"submit(item.tmp, item.id)\">回复</el-button>\n            </div>\n          </el-col>\n        </el-row>\n      </div>\n    </div>\n  </div>\n</template>\n<script>\nimport E from 'wangeditor'\nexport default {\n\n  data() {\n    let courseId = this.$route.query.id\n    return {\n      user: JSON.parse(localStorage.getItem('xm-user') || '{}'),\n      courseId: courseId,\n      courseData: {},\n      flag: false,\n      content: null,\n      commentData: []\n    }\n  },\n  mounted() {\n    this.loadCourse()\n    this.checkCourse()\n    this.loadComment()\n  },\n  // methods：本页面所有的点击事件或者其他函数定义区\n  methods: {\n    checkCourse() {\n      this.$request.get('/orders/selectAll', {\n        params: {\n          userId: this.user.id,\n          courseId: this.courseId\n        }\n      }).then(res => {\n        if (res.code === '200') {\n          if (res.data.length > 0) {\n            this.flag = true\n          }\n        } else {\n          this.$message.error(res.msg)\n        }\n      })\n    },\n    loadCourse() {\n      this.$request.get('/course/selectById/' + this.courseId).then(res => {\n        if (res.code === '200') {\n          this.courseData = res.data\n        } else {\n          this.$message.error(res.msg)\n        }\n      })\n    },\n    buy() {\n      let data = {\n        courseId: this.courseId,\n        userId: this.user.id\n      }\n      this.$request.post('/orders/add', data).then(res => {\n        if (res.code === '200') {\n          this.$message.success('购买成功，已解锁课程')\n          this.loadCourse()\n          this.checkCourse()\n        } else {\n          this.$message.error(res.msg)\n        }\n      })\n    },\n    submit(content, parentId) {\n      let data = {\n        userId: this.user.id,\n        courseId: this.courseId,\n        content: content,\n        parentId: parentId,\n      }\n      this.$request.post('/comment/add', data).then(res => {\n        if (res.code === '200') {\n          this.$message.success('评论成功')\n          this.content = null\n          this.loadComment()\n        } else {\n          this.$message.error(res.msg)\n        }\n      })\n    },\n    loadComment() {\n      this.$request.get('/comment/selectAll', {\n        params: {\n          courseId: this.courseId\n        }\n      }).then(res => {\n        if (res.code === '200') {\n          this.commentData = res.data\n        } else {\n          this.$message.error(res.msg)\n        }\n      })\n    },\n  }\n}\n</script>\n"],"mappings":"AA4EA,OAAAA,CAAA;AACA;EAEAC,KAAA;IACA,IAAAC,QAAA,QAAAC,MAAA,CAAAC,KAAA,CAAAC,EAAA;IACA;MACAC,IAAA,EAAAC,IAAA,CAAAC,KAAA,CAAAC,YAAA,CAAAC,OAAA;MACAR,QAAA,EAAAA,QAAA;MACAS,UAAA;MACAC,IAAA;MACAC,OAAA;MACAC,WAAA;IACA;EACA;EACAC,QAAA;IACA,KAAAC,UAAA;IACA,KAAAC,WAAA;IACA,KAAAC,WAAA;EACA;EACA;EACAC,OAAA;IACAF,YAAA;MACA,KAAAG,QAAA,CAAAC,GAAA;QACAC,MAAA;UACAC,MAAA,OAAAjB,IAAA,CAAAD,EAAA;UACAH,QAAA,OAAAA;QACA;MACA,GAAAsB,IAAA,CAAAC,GAAA;QACA,IAAAA,GAAA,CAAAC,IAAA;UACA,IAAAD,GAAA,CAAAxB,IAAA,CAAA0B,MAAA;YACA,KAAAf,IAAA;UACA;QACA;UACA,KAAAgB,QAAA,CAAAC,KAAA,CAAAJ,GAAA,CAAAK,GAAA;QACA;MACA;IACA;IACAd,WAAA;MACA,KAAAI,QAAA,CAAAC,GAAA,8BAAAnB,QAAA,EAAAsB,IAAA,CAAAC,GAAA;QACA,IAAAA,GAAA,CAAAC,IAAA;UACA,KAAAf,UAAA,GAAAc,GAAA,CAAAxB,IAAA;QACA;UACA,KAAA2B,QAAA,CAAAC,